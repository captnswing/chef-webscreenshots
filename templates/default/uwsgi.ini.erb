[uwsgi]
master=True
processes=5
socket=/tmp/uwsgi.sock
chmod-socket=666
max-requests=3
harakiri=20
module=webscreenshots.wsgi
home=<%= node["webscreenshots"]["venv_home"] %>
chdir=<%= node["webscreenshots"]["project_root"] %>/src/webscreenshots
touch-reload=<%= node["webscreenshots"]["project_root"] %>/src/webscreenshots/wsgi.py
vacuum=True
buffer-size=32768
