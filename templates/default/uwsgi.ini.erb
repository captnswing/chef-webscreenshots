[uwsgi]
master=True
processes=5
socket=/tmp/uwsgi.sock
chmod-socket=666
max-requests=3
harakiri=20
module=main.wsgi
home=<%= node["webscreenshots"]["home"] %>
chdir=<%= node["webscreenshots"]["working_dir"] %>/src/webscreenshots
touch-reload=<%= node["webscreenshots"]["working_dir"] %>/reload.uwsgi
vacuum=True
buffer-size=65536
